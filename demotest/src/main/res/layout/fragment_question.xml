<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/main_question_bg"
    android:fillViewport="true"
    android:paddingBottom="10dp">


    <TextView
        android:id="@+id/tv_Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:maxLines="2"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginRight="25dp"
        android:paddingRight="20dp"
        android:autoSizeMaxTextSize="16sp"
        android:text="@string/whattype"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSelectOne"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_button"
        android:buttonTint="@color/bg_white"
        android:gravity="center"
        android:text="RadioButton"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColor="@color/bg_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_Question"
        app:layout_constraintTop_toBottomOf="@id/tv_Question"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnSelectTwo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:gravity="center"
        android:text="RadioButton"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColor="@color/bg_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/btnSelectOne"
        app:layout_constraintTop_toBottomOf="@id/btnSelectOne"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="56dp" />

    <Button
        android:id="@+id/btnSelectThree"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:gravity="center"
        android:text="RadioButton"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColor="@color/bg_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/btnSelectTwo"
        app:layout_constraintTop_toBottomOf="@id/btnSelectTwo"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="56dp" />

    <Button
        android:id="@+id/btnSelectFour"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:gravity="center"
        android:text="RadioButton"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColor="@color/bg_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/btnSelectThree"
        app:layout_constraintTop_toBottomOf="@id/btnSelectThree"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="56dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
